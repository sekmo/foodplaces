<!DOCTYPE html>
<html>
  <head>
    <title>Foodplaces</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <!-- <body class="<%= controller_name %> <%= action_name %>"> -->
  <%= content_tag :body, data: {action: action_name, controller: controller_name} do %>
    <header class="header">
      <div class="header__inner wrapper">
        <%= link_to 'FoodPlaces', root_path, class: "site-title" %>
        <nav class="main-nav">
          <ul>
            <li><%= link_to "Restaurant index", restaurants_path %></li>
            <li><%= link_to "Add a restaurant", new_restaurant_path %></li>
          </ul>
        </nav>
      </div>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" do %>
        <%= content_tag :div, value, class: "flash__inner wrapper" %>
      <% end %>
    <% end %>
    <main class="wrapper">
      <%= yield %>
    </main>
  <% end %>
</html>
