<h1>All the restaurants</h1>
<div class="restaurants-map">
</div>
<ul class="restaurants-index">
  <% @restaurants.each do |restaurant| %>
    <li class="restaurant-card">
      <%= link_to restaurant_path(restaurant) do %>
        <p class="restaurant-card__name"><%= restaurant.name %></p>
        <p class="restaurant-card__kitchen-type"><%= restaurant.kitchen_type %></p>
        <p class="restaurant-card__address"><%= restaurant.address %></p>
      <% end %>
    </li>
  <% end %>
</ul>
