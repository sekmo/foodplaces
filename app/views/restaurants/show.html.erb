<%= link_to "Back to all restaurants", restaurants_path, class: 'back-link' %>

<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.kitchen_type %></p>
<p>Address: <%= @restaurant.address %></p>
<%= link_to "Edit restaurant", edit_restaurant_path %>


<div class="restaurant-dishes">
  <h2>Available dishes:</h2>
  <ul class="restaurant-dishes-index">
    <% @restaurant.dishes.order(:name).each do |dish| %>
    <li>
      <span class="dish-name"><%= dish.name %></span> - <span class="dish-price">â‚¬<%= dish.price %></span>
      <% if dish.gluten_free  %>
        - <span class="gluten-free">Gluten free</span>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
